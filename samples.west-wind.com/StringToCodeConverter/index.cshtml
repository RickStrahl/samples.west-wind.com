    <script>
        function copyToClip() {
            /* Get the text field */
            var copyText = document.getElementById("FormattedCode");
            var text = copyText.innerText;

            var el = document.createElement('textarea');
            el.value = text;
            document.body.appendChild(el);
            el.select();

            document.execCommand('copy');
            document.body.removeChild(el);
        }
